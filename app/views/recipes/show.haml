.main_content
    .recipe_top.row
        .col-md-4
            = image_tag @recipe.image.url(:medium), class: 'recipe_image'
        .col-md-8
            #recipe_info
                %h1= @recipe.title
                %p.description= @recipe.description
    .row
        .col-md-6
            #ingredients
                %h2 Ingredientes
                %ul
                    - @recipe.ingredients.each do |ingredient|
                        %li= ingredient.name
        .col-md-6
            #directions
                %h2 Instrucciones
                %ul
                    - @recipe.directions.each do |direction|
                        %li= direction.step
        
- if user_signed_in?
    = link_to 'Editar', edit_recipe_path, class: "btn btn-default"
    = link_to 'Borrar', recipe_path, method: :delete, data:{confirm: "Estas seguro?"}, class: "btn btn-default"